<mvc:View controllerName="app.flightdetail.controller.UpdateView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">
    <Page id="idUpdate" title="{i18n>titleUpdate}">
        <content/>
        <f:SimpleForm editable="true">
            <Label text="Carrid"></Label>
            <Input value="{FlightModel>Carrid}" editable="false" id="CarridInput"></Input>
            
            <Label text="Connid"></Label>
            <Input value="{FlightModel>Connid}" editable="false" id="ConnidInput"></Input>
            
            <Label text="Fldate"></Label>
            <Input value="{FlightModel>Fldate}" editable="false" id="FldateInput"></Input>
            
            <Label text="Bookid" required="true"></Label>
            <Input value="{FlightModel>Bookid}" editable="false" id="BookidInput"></Input>
            
            <Label text="OrderDate"></Label>
            <Input value="{FlightModel>OrderDate}" id="OrderDateInput"></Input>
            
            <Label text="Passname"></Label>
            <Input value="{FlightModel>Passname}" id="PassnameInput"></Input>
            
            <Label text="ArrAirport"></Label>
            <Input value="{FlightModel>ArrAirport}" id="ArrAirportInput"></Input>
            
            <Label text="DeptAirport"></Label>
            <Input value="{FlightModel>DeptAirport}" id="DeptAirportInput"></Input>
            
            <Label text="Customid"></Label>
            <Input value="{FlightModel>Customid}" id="CustomidInput"></Input>
            
            <Label text="SeatNum"></Label>
            <Input value="{FlightModel>SeatNum}" id="SeatNumInput"></Input>
            
            <Button text="{i18n>Update}" press="onUpdate" width="80px"></Button>
        </f:SimpleForm>
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
